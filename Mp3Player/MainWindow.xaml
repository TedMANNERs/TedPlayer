<Window x:Class="Mp3Player.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mp3Player="clr-namespace:Mp3Player"
        Title="Ted Player" Height="350" Width="525">
    <Window.DataContext>
        <mp3Player:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <mp3Player:PathToFileNameConverter x:Key="PathConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="2" HorizontalAlignment="Right" Content="{Binding ElementName=MediaPlayer, Path=NaturalDuration.TimeSpan.TotalSeconds}"/>
        <MediaElement Name="MediaPlayer" LoadedBehavior="Manual" Source="{Binding Path=CurrentTrack}" Volume="{Binding Path=Volume}" MediaOpened="MediaPlayer_MediaOpened"/>
        <ListBox Grid.Column="1" ItemsSource="{Binding Path=TrackList}" Margin="0,0,0,5" SelectedItem="{Binding Path=CurrentTrack}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Path=LocalPath, Converter={StaticResource PathConverter}}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Slider Name="TrackSlider" Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0,10,0" Value="{Binding Path=TimeSliderValue}"
                Maximum="{Binding ElementName=MediaPlayer, Path=NaturalDuration.TimeSpan.TotalSeconds}" ValueChanged="TrackSlider_ValueChanged"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Margin="5,5,5,5" Content="&#x2759;&#x25C0;" Padding="5,5" Command="{Binding Path=PreviousCommand}" 
                    FontFamily="Segoe UI Symbol" MinWidth="25"/>
            <Button Margin="5,5,5,5" Padding="5,5" Command="{Binding Path=PlayPauseCommand}" 
                    FontFamily="Segoe UI Symbol" MinWidth="30">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Content" Value="&#x25B6;"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=IsPlaying}" Value="true">
                                <Setter Property="Content" Value="&#x275A;&#x275A;"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=IsPlaying}" Value="false">
                                <Setter Property="Content" Value="&#x25B6;"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Margin="5,5,5,5" Content="&#x25B6;&#x2759;" Padding="5,5" Command="{Binding Path=NextCommand}" 
                    FontFamily="Segoe UI Symbol" MinWidth="25"/>
            <Button Margin="5,5,5,5" Content="&#x25A0;" Padding="5,5" Command="{Binding Path=StopCommand}" 
                    FontFamily="Segoe UI Symbol" MinWidth="30"/>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="2" Margin="5,5,5,5" HorizontalAlignment="Right" 
                Content="Open" Padding="5,5" Command="{Binding Path=OpenCommand}"/>
        <StackPanel Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" Orientation="Horizontal">
            <Label FontFamily="Segoe UI Symbol" MinWidth="22">
                <Label.Style>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Content" Value="&#128266;"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Path=Volume}" Value="0" >
                                <Setter Property="Content" Value="&#x1f508;"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=Volume}" Value="2.5">
                                <Setter Property="Content" Value="&#128264;"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=Volume}" Value="5">
                                <Setter Property="Content" Value="&#128265;"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=Volume}" Value="7.5">
                                <Setter Property="Content" Value="&#128266;"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Label.Style>
            </Label>
            <Slider Width="100" Value="{Binding Path=Volume}" Maximum="1" SmallChange="0.01"/>
        </StackPanel>

    </Grid>
</Window>
